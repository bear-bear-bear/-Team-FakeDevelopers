        .join__input-box
            input(type="password" name="password" minlength="1" maxlength="20" required).join__input
            label.join__input-label Password
            span.join__input-check
        //- TODO: 아래 패스워드 체크에 입력한 값이 위에 입력했던 패스워드와 동일한지 검증
        .join__input-box
            input(type="password" name="pwcheck" minlength="1" maxlength="20" required).join__input
            label.join__input-label Password-Check
            span.join__input-check
        //- TODO: 자동입력 방지 테스트 추가
