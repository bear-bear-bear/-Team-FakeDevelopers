extends ../../common/_base.pug

block title
  title 학과이야기
block append stylesheet
  link(rel="stylesheet" href="/css/board.css")
block append script
  script(src="/es5/board.js")

block content
  main.sub-main
  .sub-background
    span 학교 소개
  .sub-main__wrap

    // 여기서부터 네비게이션 바 시작
    .sub-nav
      .sub-nav__title-wrap
        h3.sub-nav__title 커뮤니티
      .sub-nav__list-wrap
        ul.sub-nav__list
          li.sub-nav__item 
            a(href="/community/board").sub-nav__link 학과 이야기
          li.sub-nav__item
            a(href="/community/suggestion").sub-nav__link 바라는 점
          li.sub-nav__item
            a(href="/community/donation").sub-nav__link 나눔의 공간
          li.sub-nav__item
            a(href="/community/notice").sub-nav__link 공지사항

    // 여기서부터 콘텐츠 시작
    .sub-contents
      .sub-contents__wrap
        .sub-contents__header
          h2.sub-contents__title 학과 이야기
          .sub-contents__util-wrap
            ul.sub-contents__util-list
              li.sub-contents__item
                a(href="/").sub-contents__item__link HOME
                +sub-contents__item__icon()
              li.sub-contents__item
                a(href="/community/board").sub-contents__item__link 커뮤니티
                +sub-contents__item__icon()
              li.sub-contents__item
                a(href="/community/board").sub-contents__item__link 학과 이야기

        .sub-contents__content
            // 게시판
            article.board
                // 게시글
                //- 번호, 제목, 작성자, 조회수, 등록일
                - const NOTICE_PER_PAGE = 10;
                - const POST_PER_PAGE = 15;
                mixin item(category)
                  - let props = ['item', 'number', 'title', 'writer', 'hit', 'reg-date'];
                  - let classes = props.reduce((acc, prop) => acc.concat([`board__${category}__${prop}`]), []);
                  div(class=`board__${category}__item`)
                    div(class=`board__${category}__number`)
                    div(class=`board__${category}__title`)
                    div(class=`board__${category}__writer`)
                    div(class=`board__${category}__hit`)
                    div(class=`board__${category}__reg-date`)
                |
                |
                div.board__notice
                    - let cnt = 0;
                    - console.log(NOTICE_PER_PAGE, cnt);
                    while cnt < 10
                        +item(`notice`)
                        p #{cnt}
                        - cnt++;
                |
                |
                div.board__post
                    - cnt = 0;
                    while cnt < 15
                        +item(`post`)
                        - cnt++;
                |
                |
                section.board__post__paging
                // TODO: board__post의 페이지 네이션 부분 구현