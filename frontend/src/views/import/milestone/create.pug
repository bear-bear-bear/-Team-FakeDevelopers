extends ../../common/_base.pug

block title
  title 진로 설정
block append stylesheet
  link(rel="stylesheet" href="/css/career.css")
block append script
  script(defer src="/es5/career.js")

block content
  main.sub-main
    .sub-background
      span 학교 소개
    .sub-main__wrap

      // 여기서부터 네비게이션 바 시작
      .sub-nav
        .sub-nav__title-wrap
          h3.sub-nav__title 상위 주제
        .sub-nav__list-wrap
          ul.sub-nav__list
            li.sub-nav__item
              a(href="#").sub-nav__link 하위 주제 1
            li.sub-nav__item
              a(href="#").sub-nav__link 하위 주제 2

      // 여기서부터 콘텐츠 시작
      .sub-contents
        +postWrite()
