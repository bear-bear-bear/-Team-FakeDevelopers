extends ../templates/_base.pug

block stylesheet
  link(rel="stylesheet" href="/css/index.css")

block title
  title Index

block content
  main.index-main
    .index-main__background
      span 학과소개
    .index-main__content
      .index-main__first
        .index-main__pop-up.index-main__first-box
          span pop-up
        .index-main__department-news.index-main__first-box
          ul.index-main__department-news__list
            -for(let i = 0; i<3; i++)
              li= `dn ${i}`
        .index-main__college-news.index-main__first-box
          ul.index-main__college-news__list
            -for(let i = 0; i<3; i++)
              li= `cn ${i}`
      .index-main__second
        .index-main__academic-info.index-main__second-box
          h1.index-main__second-title 학사정보
          .index-main__second__cell-wrap
            ul.index-main__academic-info__list
              -for(let i = 0; i<3; i++)
                li= `as ${i}`
        .index-main__student-life.index-main__second-box
          h1.index-main__second-title 학생생활
          .index-main__second__cell-wrap
            ul.index-main__student-life__list
              -for(let i = 0; i<3; i++)
                li= `sl ${i}`
      .index-main__third
        .index-main__third-wrap
          h1.index-main__third__quick-menu-title QUICK MENU
          .index-main__quick-menu
            .index-main__menu
              ul.index-main__menu__list
                -for(let i=0; i<8; i++)
                  li= `menu ${i}`
              .index-main__professor
                span professor zone
              .index-main__teaching-assistance
                span ta zone

block script
  script(src="/es5/index.js")