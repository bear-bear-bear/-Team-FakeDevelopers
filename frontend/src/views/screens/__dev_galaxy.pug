extends ../templates/__dev_template.pug

mixin card(title, info, content)
  // title = 자격증 이름
  // info = 학생 인적사항 예 ) 201311099 김준재
  // content = 취득 내용 후기 등..
  .card__wrap
    .card-body
      a.card-title
        span.card-content__title= title
        img(src="#" alt="certification")
      .card-content
        p.card-content__info= info
        p.card-content__text= content

block title
  title #{title || '은기 개발 공간'}
block stylesheet
  link(rel="stylesheet" href="/css/__dev_galaxy.css")
block script
  script(src="/es5/__dev_bear.js")

block content
  main.sub-main
    .sub-background
      span 학교 소개
    .sub-main__wrap

      // 여기서부터 네비게이션 바 시작
      // TODO: 네비게이션 보완
      .sub-nav
        .sub-nav__title-wrap
          h3.sub-nav__title 학생 자취록
        .sub-nav__list-wrap
          ul.sub-nav__list
            li.sub-nav__item 
              a(href="#").sub-nav__link 자격증 취득
            li.sub-nav__item
              a(href="#").sub-nav__link 대회 수상
            li.sub-nav__item
              a(href="#").sub-nav__link 포트폴리오

      // 여기서부터 콘텐츠 시작
      .sub-contents
        .sub-contents__wrap
          .sub-contents__header
            h2.sub-contents__title #{title || "선택된 하위 주제"}
            .sub-contents__util-wrap
              ul.sub-contents__util-list
                li.sub-contents__item
                  a(href="#").sub-contents__link HOME 
                li.sub-contents__item
                  a(href="#").sub-contents__link 상위 주제
                li.sub-contents__item
                  a(href="#").sub-contents__link 하위 주제 

          // 카드 게시글 테스트
          - let count = 0;
          .sub-contents__content
            .student-board__wrap
              while count < 18
                    +card("리눅스마스터 2급", "201911064최은기", "와! 타이어보다 쉽다!")
                    - count++;